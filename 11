import ccxt
import pandas as pd
import asyncio
import nest_asyncio
import requests
import config1  # Change to import the config1 module
from datetime import datetime, timezone
import ta  # Import the ta library

interval = '1m'  # 1-minute candlesticks

# Initialize Binance client
binance = ccxt.binance({
    'apiKey': config1.API_KEY,
    'secret': config1.API_SECRET,
})

# Dictionary to store the last alert messages for each symbol
last_alert_messages = {}

# Function to get historical candlestick data
def get_historical_data(symbol, interval, limit=500):
    ohlcv = binance.fetch_ohlcv(symbol, interval, limit=limit)
    df = pd.DataFrame(ohlcv, columns=['timestamp', 'open', 'high', 'low', 'close', 'volume'])
    df['timestamp'] = pd.to_datetime(df['timestamp'], unit='ms')
    df.set_index('timestamp', inplace=True)
    return df

# Function to calculate EMA
def calculate_ema(df, period):
    ema = ta.trend.EMAIndicator(df['close'], window=period)
    return ema.ema_indicator()

# Function to check EMA cross
def check_ema_cross(df, short_period=3, long_period=200):
    df['ema_short'] = calculate_ema(df, short_period)
    df['ema_long'] = calculate_ema(df, long_period)

    cross_over = df['ema_short'].iloc[-2] >= df['ema_long'].iloc[-2] and df['ema_short'].iloc[-3] <= df['ema_long'].iloc[-3]
    cross_under = df['ema_short'].iloc[-2] <= df['ema_long'].iloc[-2] and df['ema_short'].iloc[-3] >= df['ema_long'].iloc[-3]

    return cross_over, cross_under

# Function to calculate RSI using ta library
def calculate_rsi(df, period):
    rsi = ta.momentum.RSIIndicator(df['close'], window=period)
    return rsi.rsi()

# Function to send a message to 3commas using a webhook
def send_3commas_message(symbol, action, close_price):
    if last_alert_messages.get(symbol) != action:
        timestamp = datetime.now(timezone.utc).isoformat()
        payload = {
            "secret": config1.SECRET,  # Change to config1
            "max_lag": "300",
            "timestamp": timestamp,
            "trigger_price": str(close_price),
            "tv_exchange": "BINANCE",
            "tv_instrument": symbol.replace('/', '') + '.P',
            "action": action,
            "bot_uuid": "3054d7a6-d6ac-4e32-9abb-1f92ca1fa837"  # Consider changing this to a configurable option as mentioned earlier
        }

        url = config1.THREE_COMMAS_WEBHOOK_URL  # Change to config1
        response = requests.post(url, json=payload)
        
        if response.status_code == 200:
            print(f"Successfully sent alert for {symbol} with action {action}")
            last_alert_messages[symbol] = action
        else:
            print(f"Failed to send alert for {symbol}: {response.content}")

# Main function (now defined as async)
async def main():
    while True:
        try:
            historical_data_list = await asyncio.gather(*[get_historical_data(symbol, interval) for symbol in config1.SELECTED_SYMBOLS])  # Change to config1
            
            for historical_data, symbol in zip(historical_data_list, config1.SELECTED_SYMBOLS):  # Change to config1
                cross_over, cross_under = check_ema_cross(historical_data)
                close_price = historical_data['close'].iloc[-1]

                rsi_6 = calculate_rsi(historical_data, 6)
                rsi_21 = calculate_rsi(historical_data, 21)

                last_rsi_6 = rsi_6.iloc[-2]
                last_rsi_21 = rsi_21.iloc[-2]

                # Define your conditions for sending alerts based on RSI and EMA
                if cross_over:
                    send_3commas_message(symbol, "enter_long", close_price)
                elif cross_under:
                    send_3commas_message(symbol, "enter_short", close_price)

        except Exception as e:
            print(f"Error in main loop: {e}")

        await asyncio.sleep(60)  # Adjust as necessary

# Use nest_asyncio to allow running asyncio in Jupyter notebooks
nest_asyncio.apply()

# Create and run the event loop
asyncio.run(main())
